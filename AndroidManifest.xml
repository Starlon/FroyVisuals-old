<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.starlon.froyvisuals"
      android:versionCode="1"
      android:versionName="1.0">
    <application 
        android:label="@string/app_name" 
        android:debuggable="true" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">

        <!-- Main activity -->
        <activity android:name="FroyVisuals"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- about activity -->
        <activity 
              android:name="AboutActivity" android:label="@string/about_name">
        </activity>

        <!-- preferences activity -->
        <activity 
              android:name="PreferencesActivity" android:label="@string/preferences_name">
        </activity>

        <!-- mic input activity -->
        <activity 
              android:name="AboutPluginsActivity" android:label="@string/input_name">
        </activity>

        <!-- about plugins activity -->
        <activity 
              android:name="AboutPluginsActivity" android:label="@string/input_name">
        </activity>

    </application>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-sdk android:minSdkVersion="8"/>
</manifest> 
